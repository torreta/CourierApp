<h1>Listing packages</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Sender agency</th>
      <th>Receiver agency</th>
      <th>Status</th>
      <th>Dispatched at</th>
      <th>Delivered at</th>
      <th>Lenght</th>
      <th>Width</th>
      <th>Height</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.sender_id %></td>
        <td><%= package.receiver_id %></td>
        <td><%= package.sender_agency_id %></td>
        <td><%= package.receiver_agency_id %></td>
        <td><%= package.status %></td>
        <td><%= package.dispatched_at %></td>
        <td><%= package.delivered_at %></td>
        <td><%= package.lenght %></td>
        <td><%= package.width %></td>
        <td><%= package.height %></td>
        <td><%= package.weight %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

