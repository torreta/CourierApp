<h1>Listing packages</h1>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Sender</th>
          <th>Receiver</th>
          <th>Sender agency</th>
          <th>Receiver agency</th>
          <th>Status</th>
          <th>Dispatched at</th>
          <th>Delivered at</th>
          <th>Lenght</th>
          <th>Width</th>
          <th>Height</th>
          <th>Weight</th>
          <th colspan="6">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @packages.each do |package| %>
          <tr>
            <td><%= package.sender_id %></td>
            <td><%= package.receiver_id %></td>
            <td><%= package.sender_agency_id %></td>
            <td><%= package.receiver_agency_id %></td>
            <td><%= package.status %></td>
            
            <td><%= package.dispatched_at.strftime("%Y/%m/%d") %></td>
            <td><%= package.delivered_at.strftime("%Y/%m/%d") %></td>
            
            <td><%= package.lenght %></td>
            <td><%= package.width %></td>
            <td><%= package.height %></td>
            <td><%= package.weight %></td>
            <td><%= link_to 'Show', package, class:'btn btn-mini' %></td>
            <td><%= link_to 'Edit', edit_package_path(package), class:'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', package, method: :delete, class:'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

<%= link_to 'New Package', new_package_path %>
