        <%= f.label :height , class: 'control-label'%><br>
        <div class="controls">
          <%= f.text_field :height %>
        </div>
      </div>
     <div class="control-group">
        <%= f.label :weight , class: 'control-label'%><br>
       <div class="controls">
        <%= f.text_field :weight %>
       </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit 'Submit', class: 'btn btn-default'%>
        </div>
      </div>
    <% end %>
